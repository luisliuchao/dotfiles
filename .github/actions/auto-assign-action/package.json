{
  "name": "auto-assign-action",
  "version": "1.1.5",
  "description": "Add reviewers to pull requests when pull requests are opened.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luisliuchao/alternate-assign-action.git"
  },
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "package": "ncc build --source-map --license licenses.txt"
  },
  "author": "Liu Chao",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.1.1",
    "@actions/github": "^1.1.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.20",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.141",
    "@types/node": "^12.7.8",
    "@vercel/ncc": "^0.24.0",
    "husky": "^3.0.8",
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "prettier": "^1.18.2",
    "ts-jest": "^26.3.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "npm run format && git add ."
    }
  }
}
